<?xml version="1.0" encoding="utf-8"?>
<template_modifications>
  <modification type="public" template="member_view" modification_key="fs_post_counter_header" description="Add &quot;Post Counter“ tab header to member profile page" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:tabs:after_recent_content]-->]]></find>
    <replace><![CDATA[$0

<xf:if is="!in_array('0', $xf.options.ca_applicable_forums) && !empty($xf.options.ca_applicable_forums)">
<a href="{{ link('members/postCounter', $user) }}"
					class="tabs-tab"
					id="postCounter"
					role="tab">{{ phrase('fs_post_counter') }}</a>

</xf:if>]]></replace>
  </modification>
  <modification type="public" template="member_view" modification_key="fs_post_counter_loading" description="Add „Post Counter“ loading to member profile page" execution_order="10" enabled="1" action="str_replace">
    <find><![CDATA[<!--[XF:tab_panes:after_recent_content]-->]]></find>
    <replace><![CDATA[$0

<xf:if is="!in_array('0', $xf.options.ca_applicable_forums) && !empty($xf.options.ca_applicable_forums)">
	<li data-href="{{ link('members/postCounter', $user) }}" role="tabpanel" aria-labelledby="post-areas">
		<div class="blockMessage">{{ phrase('loading...') }}</div>
	</li>
	
	</xf:if>]]></replace>
  </modification>
</template_modifications>
